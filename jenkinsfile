pipeline {
  agent {
    kubernetes {
      yaml '''
        apiVersion: v1
        kind: Pod
        metadata:
          labels:
            component: ci 
        spec:
          containers:
          - name: python
            image: python:3.10
            command: 
                - cat
            tty: true
        '''
    }
  }

  stages {
    stage('Install Dependencies') {
      steps {
        container('python') {
          sh 'pip install -r requirements.txt'
        }
      }
    }

    stage('Run unit tests') {
      steps {
        container('python') {
          sh 'python test.py --verbose'
        }
      }
    }
  }
}